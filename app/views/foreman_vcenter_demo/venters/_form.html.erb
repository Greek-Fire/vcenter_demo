<%= form_for @vcenter, :url => (@vcenter.id? ? build_report_path(:id => @vcenter.id) : vcenter_path) do |f| %>
    <%= base_errors_for @build_report %>
  
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active"><a href="#primary" data-toggle="tab"><%= _("Vcenter Details") %></a></li>
      <% if show_location_tab? %>
        <li><a href='#locations' data-toggle='tab'><%= _('Locations') %></a></li>
      <% end %>
      <% if show_organization_tab? %>
        <li><a href='#organizations' data-toggle='tab'><%= _('Organizations') %></a></li>
      <% end %>
    </ul>
  
    <div class="tab-content">
      <div class="tab-pane active" id="primary">
        <%= text_f(f, :name) %>
        <%= text_f(f, :fqdn) %>
        <%= text_f(f, :enclave) %>
        <!-- Add other fields related to the Automation Report here -->
      </div>
      <%= render 'taxonomies/loc_org_tabs', :f => f, :obj => @build_report %>
      <%= submit_or_cancel f %>
    </div>
  <% end %>