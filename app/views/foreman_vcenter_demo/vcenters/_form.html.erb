<%= form_for @vcenter, url: (@vcenter.new_record? ? vcenters_path : vcenter_path(@vcenter)) do |f| %>
  <%= base_errors_for @vcenter %>

  <ul class="nav nav-tabs" data-tabs="tabs">
    <li class="active"><a href="#primary" data-toggle="tab"><%= _("Vcenter Details") %></a></li>
    <% if show_location_tab? %>
      <li><a href='#locations' data-toggle='tab'><%= _('Locations') %></a></li>
    <% end %>
    <% if show_organization_tab? %>
      <li><a href='#organizations' data-toggle='tab'><%= _('Organizations') %></a></li>
    <% end %>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="primary">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
      <%= f.text_field :fqdn, class: 'form-control', placeholder: 'FQDN' %>
      <%= f.text_field :enclave, class: 'form-control', placeholder: 'Enclave' %>
      <!-- Add other fields related to the Vcenter here -->
    </div>
    <%= render 'taxonomies/loc_org_tabs', f: f, obj: @vcenter %>
    <%= submit_or_cancel f %>
  </div>
<% end %>
